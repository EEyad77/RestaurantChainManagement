@model RestaurantChainManagement.Models.Country

@{
    ViewData["Title"] = "Delete Country";
}

<h1>Delete Country</h1>

<h3>Are you sure you want to delete this country?</h3>

<div>
    <h4>Country Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Country Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Flag</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FlagPath))
            {
                <img src="@Url.Content(Model.FlagPath)" alt="Flag" style="max-height:100px;" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
