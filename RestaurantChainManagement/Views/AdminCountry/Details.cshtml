@model RestaurantChainManagement.Models.Country

@{
    ViewData["Title"] = "Country Details";
}

<h1>Country Details</h1>

<div>
    <h4>Country Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Country Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Flag</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FlagPath))
            {
                <img src="@Url.Content(Model.FlagPath)" alt="Flag" style="max-height:100px;" />
            }
        </dd>
    </dl>
</div>

<div>
    <h3>States and Cities</h3>
    @if (Model.States != null && Model.States.Any())
    {
        <ul>
            @foreach (var state in Model.States)
            {
                <li>
                    <strong>@state.Name</strong>
                    @if (state.Cities != null && state.Cities.Any())
                    {
                        <ul>
                            @foreach (var city in state.Cities)
                            {
                                <li>@city.Name</li>
                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>No states available.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

